<div class="row d-flex justify-content-center align-items-center">
  <div class="col-sm-10 col-md-7 col-lg-6">
    <div class="card p-5">
      <h1 class="text-center mb-3">Forgot Password</h1>
      <%= bootstrap_form_with model: @user, url: forgot_password_submit_path, method: :post, local: true, class: "px-3 py-1" do |f| %>
        <div class="row">
        <%= f.email_field :email, label: "Email", placeholder: "Email" %>
        <div class="d-flex justify-content-center mt-4">
          <%= f.submit "Send Reset Link", extra_class: "btn-lg w-75" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
