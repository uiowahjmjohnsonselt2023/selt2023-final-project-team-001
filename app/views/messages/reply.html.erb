<h1>Send a Reply</h1>
<p><em>
    <%=  "You are replying to: #{@receiver_name}"  %>
</em></p>
<p style="word-wrap: break-word; max-width: 100%;"><strong>Subject:</strong> <%= @subject %></p>
<p style="word-wrap: break-word; max-width: 100%;"><strong>Message:</strong> <%= @message %></p>
<br>
<%= bootstrap_form_with( url: send_reply_path, method: :post, local: true) do |f| %>
  <%= hidden_field_tag :receiver_id, @receiver_id %>
  <%= f.text_field :subject, label: "Subject", placeholder: "Subject", maxlength: 100 %>
  <%= f.text_area :message, label: "Body", placeholder: "Body", style: "height: 20em;", maxlength: 500 %>
  <%= f.submit "Send", class: 'btn btn-primary' %>
<% end %>