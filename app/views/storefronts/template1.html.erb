<div class="container mt-4" style="background-color: #EEE8AA; padding: 20px;">
  <div class="row justify-content-center">
    <div class="col-12 text-center mb-4">
      <h1 class="display-4 fw-bold" style="color: #004d00;">Welcome to Our Store</h1>
      <p class="lead text-muted">Discover Our Unique Products</p>
    </div>
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card-group">
          <div class="card h-100 shadow" style="background-color: #D2B48C;">
            <!-- Product image here -->
            <div class="card-body text-center">
              <h5 class="card-title mb-3 text-center"><%= product.name %></h5>
              <p class="card-text text-muted mb-4"><%= product.description %></p>
              <p class="card-text fs-5"><%= number_to_currency(product.price) %></p>
              <%= link_to "View Details", product_path(product.id), class: "btn btn-sm btn-earthy" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
