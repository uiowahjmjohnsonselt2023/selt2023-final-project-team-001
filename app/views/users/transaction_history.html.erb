<div class="container mt-4">
  <h2><%= if @user.is_seller
            "Sales"
          else
            "Purchase"
  end%> history for <%= @user.first_name %></h2>
  <table class="table">
    <thead>
    <tr>
      <%# link_to defaults to the current URL when none is specified %>
      <th scope="col"> Seller </th>
      <th scope="col"> Name </th>
      <th scope="col"> Price</th>
      <th scope="col"> Purchased on </th>
    </tr>
    </thead>
    <tbody>
    <% @others.each do |m| %>
      <tr>
        <td> <%= link_to m[:seller] %></td>
        <td> <%= link_to m[:product], product_path(m[:product_id]) %></td>
        <td><%= number_to_currency m[:price] %></td>
        <td><%= m[:created_at] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
