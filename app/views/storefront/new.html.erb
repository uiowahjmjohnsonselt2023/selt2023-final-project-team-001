<!-- Allow sellers to input custom code -->
<%= bootstrap_form_with(url: storefront_index_path, scope: :storefront, method: :post, local: true) do |f| %>
  <%= f.text_area :custom_code, value: '', rows: 10, cols: 50 %>
  <%= f.submit 'Preview Custom Code', name: 'preview_button' %>
  <%= f.submit 'Save Custom Code', name: 'save_button' %>
<% end %>

<!-- your products -->
<h3>Your Products:</h3>
<% @products.each do |product| %>
  <div class="product">
    <h4><%= product.name %></h4>
    <p><%= product.description %></p>
    <p>$<%= product.price %></p>
    <!-- Help users know how to link to the product -->
    <div>
      <h5>Link to This Product:</h5>
      <p>
        HTML Link:
        <code>&lt;a href="/products/<%= product.id %>"&gt;Link to <%= product.name %>&lt;/a&gt;</code>
      </p>
    </div>
  </div>
<% end %>

<!-- Display custom code output -->
<p>Preview of custom code:</p>
<div id="customCodeOutput">
  <!-- Preview will be displayed here -->
  <%= sanitize @previewed_code, tags: %w(div h1 p img h3 button a ul ol li), attributes: %w(style src alt href class) %>
</div>
