<div class="row d-flex justify-content-center align-items-center">
  <div class="col-sm-12 col-md-10 col-lg-8">
    <div class="card p-5">
      <h1 class="text-center mb-3">Create a Review</h1>
      <p class="text-center mb-3"><em>
        <% unless @name.blank? %>
          <%=  "You are reviewing: #{@name}"  %>
        <%  end %>
      </em></p>
      <%= bootstrap_form_with( url: create_review_path, method: :post, local: true) do |f| %>
        <%= hidden_field_tag :seller_id, @seller_id %>
        <%= hidden_field_tag :profile_id, @profile_id %>
        <%= f.form_group :interaction_rating, label: { text: "Rate your interaction and/or purchase:" } do %>
          <%= f.radio_button :rating, 5, label: "5 - Excellent", required: true, id: "5" %>
          <%= f.radio_button :rating, 4, label: "4", required: true, id: "4" %>
          <%= f.radio_button :rating, 3, label: "3 - Neutral", required: true, id: "3" %>
          <%= f.radio_button :rating, 2, label: "2", required: true, id: "2" %>
          <%= f.radio_button :rating, 1, label: "1 - Poor", required: true, id: "1" %>
        <% end %>
        <%= f.text_area :description, label: "(Optional) Describe your experience:", placeholder: "Leave a description...",style: "height: 10em;" %>
        <%= f.submit "Submit Review", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>