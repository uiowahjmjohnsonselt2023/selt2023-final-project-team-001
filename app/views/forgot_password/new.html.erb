<div class="row d-flex justify-content-center align-items-center">
  <div class="col-sm-10 col-md-7 col-lg-6">
    <div class="card p-5">
      <h1 class="text-center mb-3">Forgot Password</h1>
      <p style="text-align: center;">
        <em>Provide us with the email associated with your account, and we will send you a reset link.</em>
      </p>
      <%= bootstrap_form_with model: @user, url: forgot_password_submit_path, method: :post, local: true, class: "px-3 py-1" do |f| %>
        <div class="row">
          <%= f.email_field :email, label: "Email", placeholder: "Email", value: (@email.present? ? @email : '') %>
          <%= f.email_field :confirm_email, label: "Confirm Email", placeholder: "Email", value: (@confirm_email.present? ? @confirm_email : '') %>
          <div class="d-flex justify-content-between mt-3">
            <%= link_to "Back to Login", login_path %>
          </div>
          <div class="d-flex justify-content-center mt-4">
            <%= f.submit "Send Link", name: "send_link", extra_class: "btn-lg w-75" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
