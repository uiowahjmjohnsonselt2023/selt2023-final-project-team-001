<h1>New Price Alert</h1>
<p>Current Price: $<%= @product.price %></p>

<%= bootstrap_form_with model: @price_alert, url: price_alerts_path, method: :post do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.text_field :new_threshold, prepend: "$", inputmode: "decimal", pattern: "[0-9]*?(\\.[0-9]*)?", class: "form-control" %>

  <%= f.submit "Create Price Alert", class: "btn btn-primary" %>
<% end %>