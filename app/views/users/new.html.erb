<div class="row d-flex justify-content-center align-items-center">
  <div class="col-sm-10 col-md-7 col-lg-6">
    <div class="card p-5">
      <h1 class="text-center mb-3">Signup</h1>
      <%= bootstrap_form_with model: @user, url: signup_submit_path, method: :post, local: true, class: "px-3 py-1" do |f| %>
        <div class="row">
          <div class="col-md-6">
            <%= f.text_field :first_name, label: "First Name", placeholder: "First Name" %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :last_name, label: "Last Name", placeholder: "Last Name" %>
          </div>
        </div>
        <%= f.email_field :email, label: "Email", placeholder: "Email" %>
        <%= f.password_field :password, label: "Password", placeholder: "Password", help: "Must be at least 8 characters long<br>Must contain at least one capital letter<br>Must contain at least one special character".html_safe  %>

        <%= f.password_field :password_confirmation, label: "Confirm Password", placeholder: "Confirm Password" %>
        <div class="d-flex justify-content-center mt-4">
          <%= f.submit "Signup", extra_class: "btn-lg w-75" %>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <span>Already have an account? <%= link_to "Login", login_path %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
