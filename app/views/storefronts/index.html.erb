<div class="container mt-5">
  <h1 class="mb-4">Storefronts</h1>
  <div class="row">
    <% if @storefronts.present? %>
      <% @storefronts.each do |storefront| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to storefront.name, storefront_path(storefront.id) %></h5>
              <p class="card-text"><%= storefront.short_description %></p>
              <% if storefront.user.profile.seller_rating.present? && storefront.user.profile.seller_rating > 0 %>
                <p class="card-text"><%= "#{storefront.user.full_name}'s avg. rating: #{storefront.user.profile.seller_rating}" %></p>
              <% else %>
                <p class="card-text"><%= "#{storefront.user.full_name} has not been rated yet." %></p>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
    <% else %>
      <div class="col-md-12">
        <p>There are no storefronts to display.</p>
      </div>
    <% end %>
  </div>
</div>
