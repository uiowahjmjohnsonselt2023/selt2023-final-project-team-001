<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application" %>
  <title>Product Page</title>

</head>
<body>

<header>
  <h1>Product Page</h1>
  <!-- Navigation Bar -->
  <nav>
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">Products</a></li>
      <li><a href="#">Contact</a></li>
    </ul>
  </nav>
</header>

<%= bootstrap_form_with model: @user, url: signup_submit_path, method: :post, local: true do |f| %>
  <%= f.check_box :filter_1, label: 'Filter 1' %>
  <%= f.check_box :filter_2, label: 'Filter 2' %>
  <%= f.check_box :filter_3, label: 'Filter 3' %>
<% end %>

  <!-- Product Listings -->
  <div class="products" id="productListings">
    <!-- Product listings will be dynamically generated here -->
    <!-- Placeholder content -->
    <div class="product">
      <h3>Product 1</h3>
      <p>Description of Product 1</p>
      <p>$15.55</p>
    </div>
    <div class="product">
      <h3>Product 2</h3>
      <p>Description of Product 2</p>
      <p>$55.51</p>
    </div>
    <!-- End of placeholder content -->
  </div>
</div>

</body>
</html>
